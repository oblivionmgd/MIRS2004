#include <stdio.h>
#include "arduino.h"
#include "I_test_1_30.h"

int main(){
  int speed, dist;
  run_state_t state;

  if(arduino_open() != 0) return -1;
  printf("open shitayo\n");

  speed = 30;
  dist = 300;
  request_set_runmode(STR, speed, dist);
  printf("%d \n",state);

  while(1){
    request_get_runmode(&state, &speed, &dist);
    printf("%d \n",state);
    if( state == STP ) {
      printf("break shitayo\n");
      break;
    }
  }

  arduino_close();
  return 0;
}
